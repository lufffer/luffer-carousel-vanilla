{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": true,
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "config",
    "dist",
    "src/data",
    "*.js",
    "src/index.ts"
  ],
  "include": ["src/**/*"]
}
